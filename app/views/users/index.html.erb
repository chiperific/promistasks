<div class="row valign-wrapper">
  <div class="col s10">
    <h1>Users</h1>
  </div>
  <div class="col s2">
    <%= link_to '<i class="material-icons">add</i>'.html_safe, new_user_path, class: 'btn-floating btn-large waves-effect waves-light green darken-2' %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
      <th>Type</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class='table-profile-pic'>
          <%= link_to user do  %>
            <% if user.oauth? %>
              <%= image_tag user.oauth_image_link, alt: 'Profile pic', class: 'circle' %>
            <% else %>
              <i class="material-icons no-pic">account_circle</i>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if user.system_admin? %>
            <i class="material-icons tooltipped" data-position="left" data-tooltip="System Administrator">verified_user</i>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.readable_type %></td>
        <td><%= link_to 'Show', user, class: 'btn green waves-effect waves-light right' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn amber waves-effect waves-light right', 'data-turbolinks'=> 'false' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
