<tr>
  <td>
    <% if connection.property.can_be_viewed_by?(current_user) %>
      <%= link_to property_path(connection.property), class: 'btn-small btn-slim blue lighten-5 grey-text text-darken-3 waves-effect z-depth-1' do %>
        <%= connection.property.name %>
      <% end %>
    <% else %>
      <%= connection.property.name %>
    <% end %>
  </td>
  <td>
    <%= connection.relationship.capitalize %>
  </td>
  <td>
    <%= human_date(connection.created_at) %>
  </td>
  <td class='slim'>
    <%= link_to edit_connection_path(connection), class: 'btn-floating btn-small blue darken-2', 'data-turbolinks'=> 'false' do %>
      <i class="material-icons">edit</i>
    <% end %>
  </td>
</tr>
