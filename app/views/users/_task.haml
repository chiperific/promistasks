%li.task_li{id: "#{task.id}"}
  .row.no-bottom-margin
    .col.s12
      .row.card.valign-wrapper
        .col.s1.handle
          %i.material-icons menu
        .col.s11
          .row
            .col.s9.task_title
              = task.title
            .col.s3.task_buttons
              .row.right.no-bottom-margin
                = link_to edit_auto_task_path(task), remote: true, class: 'btn-flat', data: { position: 'bottom', tooltip: 'Edit' } do
                  %i.material-icons.grey-text.text-darken-1 create
                = link_to auto_task_path(task), method: :delete, remote: true, class: 'btn-flat', data: { position: 'bottom', tooltip: 'Delete', confirm: 'Are you sure you want to delete this Auto Task?' } do
                  %i.material-icons.grey-text.text-darken-1 delete
            .col.s10.task_notes
              = task.notes
            .col.s2.task_due
              = "Due in #{pluralize(task.days_until_due, 'days')}"
