<div class="row valign-wrapper">
  <div class="col s8">
    <h2>Parks</h2>
  </div>
  <div class="col s2">
    <%= link_to list_parks_path, class: 'btn-floating waves-effect waves-light blue darken-2', id: 'list_parks_link' do %>
      <i class="material-icons">menu</i>
    <% end %>
  </div>
  <div class="col s2">
    <%= link_to new_park_path, class: 'btn-floating btn-large waves-effect waves-light green darken-2', id: 'new_park_link' do %>
      <i class="material-icons">add</i>
    <% end %>
  </div>
</div>

<div class="row">
  <% if @parks.any? %>
    <%= render partial: 'park', collection: @parks %>
  <% end %>
</div>

<% if @parks.empty? %>
  <%= render partial: 'admin_contact' %>
<% end %>
