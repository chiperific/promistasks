<div class="row valign-wrapper">
  <div class="col s8">
    <h2>Parks</h2>
  </div>
  <div class="col s2">
    <%= link_to parks_path, class: 'btn-floating waves-effect waves-light blue darken-2', id: 'parks_link' do %>
      <i class="material-icons">apps</i>
    <% end %>
  </div>
  <div class="col s2">
    <%= link_to new_park_path, class: 'btn-floating btn-large waves-effect waves-light green darken-2', id: 'new_park_link' do %>
      <i class="material-icons">add</i>
    <% end %>
  </div>
</div>

<div class="row center-align no-bottom-margin">
  <ul class="tabs z-depth-1" name="parks">
    <% if @show_new %>
      <li class="tab">
        <%= link_to 'New', list_parks_path(filter: 'new'), id: 'parks_new', remote: true %>
      </li>
    <% end %>
    <li class="tab">
      <%= link_to 'Active', list_parks_path(filter: 'active'), id: 'parks_active', remote: true %>
    </li>
    <li class="tab">
      <%= link_to 'Archived', list_parks_path(filter: 'archived'), id: 'parks_archived', remote: true %>
    </li>
  </ul>
</div>

<div class="row extra-top-margin">
  <table class="highlight responsive-table">
    <thead>
      <tr>
        <th></th>
        <th colspan="<%= Constant::Property::STAGES.count %>" class="center">Properties by stage</th>
        <th colspan="3"></th>
      </tr>
      <tr>
        <th>Name</th>
        <% Constant::Property::STAGES.each do |stage| %>
          <th class="small-text center"><%= stage.capitalize %></th>
        <% end %>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody id="park_table_body">
      <%= render partial: 'parks', collection: @parks %>
    </tbody>
  </table>
</div>

<% if @parks.empty? %>
  <%= render partial: 'admin_contact' %>
<% end %>
