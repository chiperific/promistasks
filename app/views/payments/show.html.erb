<div class="row valign-wrapper">
  <div class="col s10">
    <h2>Payment info</h2>
  </div>
  <div class="col s2">
    <%= link_to edit_payment_path(@payment), class: 'btn-floating waves-effect waves-light blue darken-2', 'data-turbolinks'=> 'false', id: 'edit_payment_link' do %>
      <i class="material-icons">edit</i>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <h4><%= @payment.status %></h4>
  </div>
</div>

<div class="section">
  <h5>$ Amounts</h5>
  <table class="striped">
    <tbody>
      <% @money_hsh.each do |k,v| %>
        <%= render partial: 'info_table', locals: { k: k, v: v } %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="divider"></div>

<div class="section">
  <h5>Dates</h5>
  <table class="striped">
    <tbody>
      <% @date_hsh.each do |k,v| %>
        <%= render partial: 'info_table', locals: { k: k, v: v } %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="divider"></div>

<div class="section">
  <h5>Connections</h5>
  <table class="striped">
    <tbody>
      <% @related_hsh.each do |k,v| %>
        <%= render partial: 'info_table', locals: { k: k, v: v } %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="divider"></div>

<div class="section">
  <h5>Recurring?</h5>
  <table class="striped">
    <tbody>
      <% @recurrence_hsh.each do |k,v| %>
        <%= render partial: 'info_table', locals: { k: k, v: v } %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="divider"></div>

<div class="section">
  <h5>Utility</h5>
  <table class="striped">
    <tbody>
      <% @utility_hsh.each do |k,v| %>
        <%= render partial: 'info_table', locals: { k: k, v: v } %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="divider"></div>

<div class="section">
  <h5>Other Info</h5>
  <table class="striped">
    <tbody>
      <% @last_hsh.each do |k,v| %>
        <%= render partial: 'info_table', locals: { k: k, v: v } %>
      <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col s12">
    <%= link_to 'Back', @return_path, class: 'btn green darken-2' %>
  </div>
</div>
