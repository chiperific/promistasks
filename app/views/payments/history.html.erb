<div class="row valign-wrapper">
  <div class="col s8">
    <h2>Historical Payments</h2>
  </div>
  <div class="col s2">
    <%= link_to payments_path, class: 'btn waves-effect waves-light blue darken-2' do %>
      <i class="material-icons right">history</i>
      Recent
    <% end %>
  </div>
  <div class="col s2">
    <%= link_to new_payment_path, class: 'btn-floating btn-large waves-effect waves-light green darken-2' do %>
      <i class="material-icons">add</i>
    <% end %>
  </div>
</div>

<% if @payments.present? %>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Status</th>
        <th>Pay To</th>
        <th>For</th>
        <th>Utility</th>
        <th>$ Due</th>
        <th>Recurring</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @payments  %>
    </tbody>
  </table>
<% else %>
  <%= render partial: 'admin_contact' %>
<% end %>
