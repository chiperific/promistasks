<div class="row">
  <h4>People with skills that match task: <%= @task.title %></h4>
</div>

<div class="row section z-depth-1">
  <div class="col s10 m11">
    <% @task.skills.each do |skill| %>
      <div class="chip">
        <%= skill.name %>
      </div>
    <% end %>
  </div>
  <div class="col s2 m1">
    <%= link_to skills_task_path(@task), class: 'btn-floating btn-small blue darken-2' do  %>
      <i class="material-icons">edit</i>
    <% end %>
  </div>
</div>

<table class='highlight responsive-table' id='task_table'>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th>Name</th>
      <th>Type</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id='user_table_body'>
    <% if @users.count.positive? %>
      <%= render partial: 'users/user_table', locals: { tasks: @users } %>
    <% else %>
      <tr>
        <td colspan="6" class="center-align">
          No one found
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
