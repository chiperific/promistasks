<div class="row center-align">
  <div class="col s12">
    <h2>Help <%= @task.title.downcase %></h2>
  </div>
</div>

<div class="row">
  <div class="col s12 m6 offset-m3 z-depth-1 center-align green lighten-2">
    <% if @task.skills.any? %>
      <p><strong>Skills you'll need:</strong></p>
      <% @task.skills.each do |skill| %>
        <div class="chip">
          <%= skill.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


<div class="row">
  <div class="col s12 m8 offset-m2 l6 offset-l3">
    <p class="big-p center-align">
      <strong>Want more details? Reach out to:</strong>
    </p>
    <table class="striped">
      <tbody>
        <tr>
          <td><strong>Point of contact:</strong></td>
          <td>
            <%= @task.owner.staff? ? @task.owner.fname : Constant::Organization::CONTACT_NAME %>
          </td>
        </tr>
        <tr>
          <td><strong>Email:</strong></td>
          <td>
            <%= mail_to @task.owner.staff? ? @task.owner.email : Constant::Organization::CONTACT_EMAIL %>
          </td>
        </tr>
        <tr>
          <td><strong>Phone:</strong></td>
          <td>
            <%= link_to @contact_phone, "tel:#{@contact_phone}" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row section">
  <div class="col s12">
    <p class="big-p">
      We'd love your help! We serve more than 1,000 people ever year, and none of it is possible without the time and talents of people like you.
    </p>
  </div>
  <div class="col s12">
    <%= link_to root_path, class: 'btn green darken-2 waves-effect waves-light right' do %>
      <i class="material-icons left">keyboard_arrow_left</i>Back to tasks
    <% end %>
  </div>
</div>

<div class="row section center-align z-depth-1 deep-purple darken-4 grey-text text-lighten-3 white-links">
  <div class="col s12">
    <p class="big-p">Want to find group opportunities? Have a question?</p>
    <p><%= Constant::Organization::CONTACT_NAME %> can help! Just email <%= mail_to Constant::Organization::CONTACT_EMAIL %> or call <%= link_to Constant::Organization::CONTACT_PHONE, "tel:#{Constant::Organization::CONTACT_PHONE}" %>.</p>
  </div>
</div>
