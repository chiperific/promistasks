<%= link_to task_path(public_task) do  %>
  <div class="col s12 m4">
    <div class="card amber z-depth-3">
      <div class="card-content">
        <span class="card-title grey-text text-darken-4"><%= public_task.title %></span>
        <p class='grey-text text-darken-4 clipped'><%= public_task.notes %></p>
      </div>
      <div class="card-action">
        <%= link_to task_path(public_task), class: 'blue-text text-darken-3' do %>
          <%= public_task.due.present? ? human_date(public_task.due) : 'Flexible' %>
        <% end %>
        <%= link_to 'Learn more', task_path(public_task), class: 'right blue-text text-darken-3' %>
      </div>
    </div>
  </div>
<% end %>
