<div class="row center-align">
  <%= render partial: 'utility_box', utility_box: @utility %>
  <div class="col s12 m6 l8">
    <table class="striped">
      <thead>
        <tr>
          <th>Point of Contact</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <% if @utility.poc_name.present? %>
              <%= @utility.poc_name %>
            <% else %>
              <i>Name not provided</i>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
            <% if @utility.poc_phone.present? %>
              <%= @utility.poc_phone %>
            <% else %>
              <i>Phone not provided</i>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>
            <% if @utility.poc_email.present? %>
              <%= @utility.poc_email %>
            <% else %>
              <i>Email not provided</i>
            <% end %>
          </td>
        </tr>
        <% if @utility.good_address? %>
          <tr>
            <td>
              <%= link_to 'Map', @utility.google_map_link, class: 'btn blue darken-2 waves-effect', target: '_blank' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<% if @utility.notes.present? %>
  <div class="row section">
    <div class="col s12">
      <p>
        <%= @utility.notes %>
      </p>
    </div>
  </div>
<% end %>

<div class="row section">
  <div class="col s12">
    <div class="row valign-wrapper">
      <div class="col m10 s12">
        <h4>Payments</h4>
      </div>

      <div class="col m2 s12">
        <%= link_to new_payment_path(utility: @utility), class: 'btn waves-effect waves-light green darken-2', 'data-turbolinks'=> 'false', id: 'new_payment_link' do %>
          <i class="material-icons">add</i>
          <i class="material-icons">attach_money</i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row center-align">
  <% if @payments.any? %>
    <table class='striped responsive-table'>
      <thead>
        <%= render partial: 'payments_table_head' %>
      </thead>
      <tbody>
        <%= render partial: 'payments_table', collection: @payments %>
      </tbody>
    </table>
  <% else %>
    <p class="center">No payment history</p>
  <% end %>
</div>
