<div class="col s12 m6 l4 utility">
  <div class="card amber z-depth-3">
    <div class="card-image">
      <%= image_tag @utility.google_map, alt: "utility map", class: 'street-map' %>
      <%= link_to edit_utility_path(@utility), class: 'btn-floating halfway-fab waves-effect waves-light blue darken-2', 'data-turbolinks'=> 'false', id: 'edit_utility_link' do  %>
        <i class="material-icons">edit</i>
      <% end %>
    </div>
    <div class="card-content grey-text text-darken-4">
      <span class="card-title"><%= @utility.name %></span>
      <p class="small-text">
        <%= @utility.full_address %>
      </p>
    </div>
  </div>
</div>

