<div class="row valign-wrapper">
  <div class="col s1">
    <%= link_to user_path(connection_user), class: 'btn-floating btn-small green darken-2 waves-effect' do %>
      <i class="material-icons">arrow_forward</i>
    <% end %>
  </div>
  <div class="col s10">
    <h5>
      <%= connection_user.name %>
    </h5>
  </div>
  <div class="col s1">
    <%= link_to '#', class: 'collapse_link prevent_default btn-floating btn-small purple darken-1', name: connection_user.id do %>
      <i class="material-icons up">swap_vert</i>
    <% end %>
  </div>
</div>

<div class="row table_div" name="<%= connection_user.id %>">
  <div class="col s12">
    <table class="highlight responsive-table">
      <thead>
        <tr>
          <th>Property</th>
          <th>Relationship</th>
          <th>Date</th>
          <th class="slim"></th>
        </tr>
      </thead>
      <tbody>
        <% if connection_user.connections.except_tennants.any? %>
          <%= render partial: 'conn_user', collection: connection_user.connections.except_tennants %>
        <% else %>
          <tr>
            <td colspan="5" class="center-align">None</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
