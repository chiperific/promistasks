<tr>
  <td>
    <%= link_to user_path(conn_property.user), class: 'btn-small btn-slim blue lighten-5 grey-text text-darken-3 waves-effect z-depth-1' do %>
      <%= conn_property.user.name %>
    <% end %>
  </td>
  <td>
    <%= conn_property.relationship %>
  </td>
  <td>
    <%= human_date(conn_property.updated_at) %>
  </td>
  <td class='slim'>
    <%= link_to edit_connection_path(conn_property), class: 'btn-floating btn-small blue darken-2', 'data-turbolinks'=> 'false' do %>
      <i class="material-icons">edit</i>
    <% end %>
  </td>
</tr>
