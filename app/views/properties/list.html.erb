<div class="row valign-wrapper">
  <div class="col s8">
    <h2>Properties</h2>
  </div>
  <div class="col s2">
    <%= link_to properties_path, class: 'btn-floating waves-effect waves-light blue darken-2' do %>
      <i class="material-icons">apps</i>
    <% end %>
  </div>
  <div class="col s2">
    <%= link_to new_property_path, class: 'btn-floating btn-large waves-effect waves-light green darken-2' do %>
      <i class="material-icons">add</i>
    <% end %>
  </div>
</div>

<div class="row center-align">
  <ul class="pagination" id="properties_pagination" name="properties">
    <li class="waves-effect active purple">
      <%= link_to 'Yours', list_properties_path(filter: 'yours'), id: 'properties_yours', class: 'paginate_btn', remote: true  %>
    </li>
    <li class="waves-effect">
      <%= link_to 'Have Your Tasks', list_properties_path(filter: 'tasks'), id: 'properties_tasks', class: 'paginate_btn', remote: true  %>
    </li>
    <li class="waves-effect">
      <%= link_to 'Over budget', list_properties_path(filter: 'over'), id: 'properties_over', class: 'paginate_btn', remote: true  %>
    </li>
    <li class="waves-effect">
      <%= link_to 'Nearing budget', list_properties_path(filter: 'near'), id: 'properties_near', class: 'paginate_btn', remote: true  %>
    </li>
    <li class="waves-effect">
      <%= link_to 'Missing title', list_properties_path(filter: 'title'), id: 'properties_title', class: 'paginate_btn', remote: true  %>
    </li>
    <% if current_user.system_admin? %>
      <li class="waves-effect">
        <%= link_to 'All', list_properties_path(filter: 'admin'), id: 'properties_admin', class: 'paginate_btn', remote: true  %>
      </li>
    <% elsif current_user.staff? %>
      <li class="waves-effect">
        <%= link_to 'All', list_properties_path(filter: 'all'), id: 'properties_all', class: 'paginate_btn', remote: true  %>
      </li>
    <% end %>
  </ul>
</div>

<div class="row">
  <table class="striped">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Budget remaining</th>
        <th>Total Tasks</th>
        <th>Tasks for you</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody id="property_table_body">
      <%= render partial: 'properties', collection: @properties %>
    </tbody>
  </table>
</div>
