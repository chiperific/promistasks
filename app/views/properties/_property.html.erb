<div class="col s12 m6 l4">
  <div class="card amber z-depth-3">
    <div class="card-image">
      <% if property.is_default? %>
        <%= image_tag "default_tasklist.jpg", alt: "default tasklist" %>
      <% else %>
        <%= image_tag property.google_map, alt: "property street view" %>
      <% end %>
      <% if params[:action] == 'index' %>
        <%= link_to property_path(property), class: 'btn-floating halfway-fab btn-large waves-effect waves-light green', 'data-turbolinks'=> 'false'  do  %>
          <i class="material-icons">arrow_forward</i>
        <% end %>
      <% else %>
        <%= link_to edit_property_path(property), class: 'btn-floating halfway-fab btn-large waves-effect waves-light blue darken-2', 'data-turbolinks'=> 'false' do  %>
          <i class="material-icons">edit</i>
        <% end %>
      <% end %>
    </div>
    <div class="card-content">
      <span class="card-title grey-text text-darken-4"><%= property.name %></span>

      <p class='grey-text text-darken-4'>
        <%= property.tasks.visible_to(current_user).count %> tasks related to you.<br>
        <% unless property.is_default? %>
          Budget remaining: <%= property.budget_remaining.format %>
        <% end %>
      </p>
    </div>
  </div>
</div>
