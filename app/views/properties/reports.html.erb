<div class="row">
  <div class="col s12">
    <h2>Reports</h2>
  </div>
</div>

<div class="row center-align">
  Show:
  <div class="switch">
    <label>
      Active only
      <input type="checkbox" id="scope_switch">
      <span class="lever"></span>
      Include archived
    </label>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <table class="data-table">
      <thead>
        <tr>
          <th>Property</th>
          <th>Acquired Date</th>
          <th>Completion Date</th>
          <th>Status</th>
          <th>Stage</th>
          <th>Cost to date</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Demo</td>
          <td><%= Date.today %></td>
          <td><%= Date.today + 1.day %></td>
          <td>Status</td>
          <td>Stage</td>
          <td><%= Money.new(5) %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
