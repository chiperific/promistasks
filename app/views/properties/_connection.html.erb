<tr>
  <td>
    <%= link_to connection.user, class: 'btn-flat waves-effect' do %>
      <i class="material-icons left">exit_to_app</i>
      <%= connection.user.name %>
    <% end %>
  </td>
  <td>
    <%= connection.relationship.capitalize %>
  </td>
  <td>
    <%= human_date(connection.updated_at) %>
  </td>
  <td>
    <%= connection.stage || 'N/A' %>
  </td>
  <td>
    <%= human_date(connection.stage_date) || 'N/A' %>
  </td>
  <td>
    <%= link_to 'Edit', edit_connection_path(connection), class: 'btn amber waves-effect'  %>
  </td>
</tr>
