<div class="row valign-wrapper">
  <div class="col s10">
    <h1>Properties</h1>
  </div>
  <div class="col s2">
    <%= link_to '<i class="material-icons">add</i>'.html_safe, new_property_path, class: 'btn-floating btn-large waves-effect waves-light red darken-2' %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Tasklists</th>
      <th>Your tasks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.tasks.visible_to(current_user).count %></td>
        <td><%= link_to 'Details', property_path(property) %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property_path(property), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Property', new_property_path %>
