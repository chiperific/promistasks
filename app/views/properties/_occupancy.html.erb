<tr>
  <td>
    <% if current_user.staff? %>
      <%= link_to occupancy.user, class: 'btn-small btn-slim blue lighten-5 grey-text text-darken-3 waves-effect z-depth-1' do %>
        <%= occupancy.user.name %>
      <% end %>
    <% else %>
      <%= occupancy.user.name %>
    <% end %>
  </td>
  <td>
    <%= occupancy.stage.capitalize %>
  </td>
  <td>
    <%= human_date(occupancy.stage_date) %>
  </td>
  <td class='slim'>
    <%= link_to edit_connection_path(occupancy), class: 'btn-floating btn-small blue darken-2', 'data-turbolinks'=> 'false' do %>
      <i class="material-icons">edit</i>
    <% end %>
  </td>
</tr>
