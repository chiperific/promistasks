<tr>
  <td>
    <% if properties.needs_title? %>
      <span class="btn-floating red lighten-2">
        <i class="material-icons tooltipped" data-position="bottom" data-tooltip="Needs title!">error_outline</i>
      </span>
    <% end %>
  </td>
  <td><%= properties.name %></td>
  <% if properties.budget_remaining.negative? %>
    <td class='red-text text-darken-3'>
      <%= properties.budget_remaining.format %>
    </td>
  <% else %>
    <td><%= properties.budget_remaining.format %></td>
  <% end %>
  <td><%= properties.tasks.in_process.count %></td>
  <td><%= properties.tasks.in_process.related_to(current_user).count %></td>
  <td>
    <%= link_to properties.google_map_link, class: 'btn-floating btn-small amber darken-2', target: '_blank' do %>
      <i class="material-icons">map</i>
    <% end %>
  </td>
  <td>
    <%= link_to property_path(properties), class: 'btn-floating btn-small green', 'data-turbolinks'=> 'false' do  %>
      <i class="material-icons">arrow_forward</i>
    <% end %>
  </td>
  <td>
    <%= link_to edit_property_path(properties), class: 'btn-floating btn-small blue darken-2', 'data-turbolinks'=> 'false' do  %>
      <i class="material-icons">edit</i>
    <% end %>
  </td>
</tr>
